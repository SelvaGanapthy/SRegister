<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backs"
    android:gravity="center"
    tools:context="com.example.dell.sregister.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/gender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/username"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/gender" />

        <ImageView
            android:id="@+id/dob1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/gender"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="37dp"
            android:src="@drawable/dob" />

        <ImageView
            android:id="@+id/phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/dob1"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ph" />

        <ImageView
            android:id="@+id/username"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/username" />

        <ImageView
            android:id="@+id/address"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/phone"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/location" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:orientation="vertical"
            android:paddingLeft="55dp"
            android:paddingRight="3dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="180dp"
                    android:fontFamily="serif"
                    android:hint="Username"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHint="#ffffff"
                    android:textSize="17dp"
                    android:textStyle="italic" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" I   am"
                        android:textSize="17dp"
                        android:textStyle="italic" />

                    <RadioButton
                        android:id="@+id/r1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:checked="true"
                        android:text="Male"
                        android:textColor="#808080"
                        android:textSize="17dp"
                        android:textStyle="italic" />

                    <RadioButton
                        android:id="@+id/r2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:text="Female"
                        android:textColor="#808080"
                        android:textSize="17dp"
                        android:textStyle="italic" />
                </RadioGroup>
            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="serif"
                    android:hint="D.o.b(double-Tab)"
                    android:inputType="date"
                    android:textColor="#000000"
                    android:textColorHint="#ffffff"
                    android:textSize="17dp"
                    android:textStyle="italic" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/mob"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dob"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:digits="1234567890"
                    android:fontFamily="serif"
                    android:hint="Mob.no"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#ffffff"
                    android:textSize="17dp"
                    android:textStyle="italic" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/city"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mob"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="serif"
                    android:hint="City"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHint="#ffffff"
                    android:textSize="17dp"
                    android:textStyle="italic" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="450dp"
            android:layout_height="200dp"
            android:src="@drawable/lolgo"/>
        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/magic"
            android:layout_marginTop="510dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:magic_button_size="50dp"
            app:button_icon="@drawable/magic"
            android:layout_marginLeft="90dp"
            app:button_icon_width="25dp"
            app:button_icon_height="25dp"
            app:hide_text="Click me"
            app:icon_button_color="#ee2525"
            app:expandable_area_color="#ffffff"
            />
    </RelativeLayout>

</ScrollView>
